[Unit]
Description=Python3 Web Attack Service
After=network.target auditd.service
StartLimitIntervalSec=0

[Service]
ExecStart=/usr/bin/python3 /opt/webattacker.py
ExecReload=/bin/kill -HUP $MAINPID
KillMode=process
Restart=on-failure
RestartSec=1
Type=simple

[Install]
WantedBy=multi-user.target
Alias=webattacker.service
