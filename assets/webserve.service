[Unit]
Description=Insecure Python3 Web Service
After=network.target auditd.service
StartLimitIntervalSec=0

[Service]
User=www-data
Group=www-data
WorkingDirectory=/opt/website
ExecStart=/usr/bin/python3 /opt/website/webserve.py
ExecReload=/bin/kill -HUP $MAINPID
KillMode=process
Restart=on-failure
RestartSec=1
Type=simple
StandardOutput=file:/var/log/access.log
StandardError=file:/var/log/weberror.log

[Install]
WantedBy=multi-user.target
Alias=webserve.service
