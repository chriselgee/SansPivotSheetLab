[Unit]
Description=Python3 Web Client Service
After=network.target auditd.service
StartLimitIntervalSec=0

[Service]
WorkingDirectory=/opt
ExecStart=/usr/bin/python3 /opt/webclient.py
ExecReload=/bin/kill -HUP $MAINPID
KillMode=process
Restart=on-failure
RestartSec=1
Type=simple

[Install]
WantedBy=multi-user.target
Alias=webclient.service
