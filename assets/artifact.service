[Unit]
Description=Artifact Creation and Upload Service
After=network.target auditd.service webserve.service
StartLimitIntervalSec=0

[Service]
WorkingDirectory=/root
ExecStart=/bin/bash /root/artifact.sh
ExecReload=/bin/kill -HUP $MAINPID
KillMode=process
Restart=on-failure
RestartSec=1
Type=simple

[Install]
WantedBy=multi-user.target
Alias=webserve.service
